extends layout
block content
  link(rel='stylesheet', href='/stylesheets/index.css')
  h1= title
  p Welcome to #{title}
    i 这是测试
  div 这是div元素
    ul
      li 嵌套在div中的ul》li 标签
  ol
    li 这是与div同级的有序列表
  div#fromModal
    label(class='entry-item userId') userId:
      input(
        type='text' 
        class='entry-userId' 
        data-type="id" 
        placeholder='请输入userId'
      )
    label(class='entry-item username') username:
      input(
        type='text' 
        class='entry-name' 
        data-type="username" 
        placeholder='请输入user名称'
      )
    label(class='entry-item password') password:
      input(
        type='text' 
        class='entry-password' 
        data-type="password" 
        placeholder='请输入user密码'
      )
    div(class='btn-grounp')
      div(class='btn' data-type="addBtn") 添加
      div(class='btn' data-type="deleteBtn") 删除
      div(class='btn' data-type="getBtn") 获取详情
      div(class='btn' data-type="updateBtn") 更新数据
  script(src="/javascripts/index.js")
